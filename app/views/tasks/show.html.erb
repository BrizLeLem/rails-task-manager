<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><% if @task.completed? %>
        <li>☑ This task is completed</li>
    <% else %>
      <li>☐ This task is not completed yet</li>
    <% end %></p>
    <br>
  <p><%= link_to "Back to list", tasks_path %></p>

  <p><%= link_to edit_task_path(@task) do %>
    <i class="fas fa-history"> Edit this task</i>
    <% end %>
  </p>

